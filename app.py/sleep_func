from tkinter import ttk метод
import tkinter as tk
import time

root = tk.Tk()  модуль 
root.geometry('300x300+150+150+150') размер окна

def sleep func():
   time.sleep(10)   # уснули на 10 секунд
   lab['text'] = 'после сна'   # после сна выдать данный текст

btn = ttk.Button(root, text='Run', command=sleep_func)
btn.place(relx=0.5, rely=0.2, anchor=tk.CENTER)


root.mainloop() шобы окно закрылось когда пользователь хочет 

from tkinter import *
from tkinter import ttk

#colors                          add colors
#co0 = "#ffffff"                  white
#co1 = "000000"                   black
#co2 = "4456А0"                   blue

window = Tk()                    we're gon' build a window
window.title ("")
window.geometry ('485x450')
window.configure(background-co0)
window.resizable(width-FALSE, height-FALSE)

frame_up = Frame(window, width=500, height=50, bg=co2)
frame_up.grid(row=0, color)                                       вид разметки, в котором элементы на сайте расположены в виде таблицы

window.mainloop()                    run


